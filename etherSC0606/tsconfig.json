{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@contracts/*": [
        "contracts/*"
      ],
      "@test/*": [
        "test/*"
      ],
      "@openzeppelin/*": [
        "node_modules/@openzeppelin/*"
      ]
    }
  },
  "include": [
    "contracts/**/*",
    "test/**/*",
    "scripts/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "out"
  ]
}