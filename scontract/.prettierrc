{
    "printWidth": 120,
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": false,
    "bracketSpacing": true,
    "trailingComma": "all",
    "embeddedLanguageFormatting": "off",
    "plugins": ["prettier-plugin-solidity"],
    "overrides": [
      {
        "files": "*.sol",
        "options": {
          "printWidth": 120,
          "tabWidth": 4,
          "useTabs": false,
          "singleQuote": false,
          "bracketSpacing": false
        }
      },
      {
        "files": "*.json",
        "options": {
          "tabWidth": 2
        }
      }
    ]
  }